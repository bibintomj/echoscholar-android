<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A000000" /> <!-- semi-transparent black -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Main button -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF2B2B2B"/> <!-- dark background -->
            <stroke android:width="1dp" android:color="#44FFFFFF"/> <!-- soft light border -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>
