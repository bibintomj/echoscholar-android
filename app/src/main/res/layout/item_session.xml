<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/session_card_bg"
    android:clipToOutline="true"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- Play Icon -->
    <ImageView
        android:id="@+id/playIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_white"
        android:padding="8dp"
        android:src="@drawable/ic_play"
        android:contentDescription="Play session"
        android:scaleType="centerInside"
        app:tint="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- Session Title -->
    <TextView
        android:id="@+id/sessionTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Testing. One, two, t"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/sf_pro_medium"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@+id/playIcon"
        app:layout_constraintStart_toEndOf="@+id/playIcon"
        app:layout_constraintEnd_toStartOf="@+id/arrowIcon" />

    <!-- Session Time -->
    <TextView
        android:id="@+id/sessionTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1 week ago"
        android:textColor="#AAAAAA"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/sf_pro_regular"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/sessionTitle"
        app:layout_constraintStart_toEndOf="@+id/playIcon"
        app:layout_constraintBottom_toBottomOf="@+id/playIcon"
        app:layout_constraintEnd_toStartOf="@+id/arrowIcon" />

    <!-- Arrow Icon -->
    <ImageView
        android:id="@+id/arrowIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_chevron_right"
        android:contentDescription="Open details"
        app:tint="#888888"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- add inside your item layout root -->
    <CheckBox
        android:id="@+id/check"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="gone"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:padding="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
