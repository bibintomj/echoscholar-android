<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="24dp"
    tools:context=".RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to"
                android:textColor="@color/text_light"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <ImageView
                android:layout_width="266dp"
                android:layout_height="81dp"
                android:layout_marginBottom="12dp"
                android:contentDescription="EchoScholar logo"
                android:src="@drawable/echoscholar_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transcribe. Translate. Summarize."
                android:textColor="@color/text_light"
                android:textSize="14sp"
                android:layout_marginBottom="24dp" />

            <!-- Tabs -->
            <LinearLayout
                android:id="@+id/tabContainer"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginBottom="24dp"
                android:background="@color/tab_inactive"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tabLogin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="Login"
                    android:textColor="@color/text_light"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tabRegister"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/glass_effect_background"
                    android:gravity="center"
                    android:text="Register"
                    android:textColor="@color/text_light"
                    android:textSize="16sp" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/formContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <!-- Register Form -->
            <LinearLayout
                android:id="@+id/registerForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/text_light"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/emailRegisterInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/glass_effect_background"
                    android:hint="Enter Your Email"
                    android:padding="12dp"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/text_light"
                    android:textColorHint="@color/text_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="@color/text_light"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/passwordRegisterInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/glass_effect_background"
                    android:hint="Enter You Password"
                    android:padding="12dp"
                    android:inputType="textPassword"
                    android:textColor="@color/text_light"
                    android:textColorHint="@color/text_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repeat Password"
                    android:textColor="@color/text_light"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/repeatpasswordInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/glass_effect_background"
                    android:hint="Confirm You Password"
                    android:padding="12dp"
                    android:inputType="textPassword"
                    android:textColor="@color/text_light"
                    android:textColorHint="@color/text_light" />

                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/black"
                    android:layout_marginBottom="24dp" />
            </LinearLayout>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR CONTINUE WITH"
                android:textColor="@color/text_light"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/googleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/glass_effect_background"
                android:text="Login with Google"
                android:textColor="@color/text_light" />
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
